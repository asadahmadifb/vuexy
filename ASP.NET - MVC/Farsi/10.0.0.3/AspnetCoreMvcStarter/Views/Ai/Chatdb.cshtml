@* ************** Content ************** *@

<div class="app-chat card overflow-hidden" id="card-block">
	<div class="row g-0">
		<!-- Chat & Contacts -->
		<div class="col app-chat-contacts app-sidebar flex-grow-0 overflow-hidden border-end" id="app-chat-contacts">
			<div class="sidebar-header">
				<div class="d-flex align-items-center me-3 me-lg-0">
					<div class="flex-grow-1 input-group input-group-merge rounded-pill">
						<span class="input-group-text" id="basic-addon-search31">
							<i class="ti ti-search h-mirror"></i>
						</span>
						<input aria-describedby="basic-addon-search31" aria-label="جستجو..." class="form-control chat-search-input"
							   placeholder="جستجو..." type="text" />
					</div>
				</div>
				<i class="ti ti-x cursor-pointer d-lg-none d-block position-absolute mt-2 me-1 top-0 end-0"
				   data-bs-toggle="sidebar" data-overlay data-target="#app-chat-contacts"></i>
			</div>
			<hr class="container-m-nx m-0" />
			<div class="sidebar-body">
				<div class="chat-contact-list-item-title d-flex align-items-center mt-2 mb-0 px-4">
					<label class="form-label" for="form-repeater-1-3">نمونه </label>
					<select class="form-select" id="form-repeater-1-3" onchange="showAlert()">
