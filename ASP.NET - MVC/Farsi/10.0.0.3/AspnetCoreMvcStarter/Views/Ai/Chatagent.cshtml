@* ************** Content ************** *@

<div class="app-chat card overflow-hidden" id="card-block">
	<div class="row g-0">
		<!-- Chat History -->
		<div class="col app-chat-history bg-body">
			<div class="chat-history-wrapper">
				<div class="chat-history-body bg-body">
					<div class="chat-contact-list-item-title d-flex align-items-center mb-3">
						<label class="form-label m-2" for="form-repeater-1-3">تحلیلها </label>
						<select class="form-select" id="form-repeater-1-3" onchange="showAlert()">
							<option value="">لطفا انتخاب کنید</option>
							<option value="چگونه می‌توانیم بهترین استراتژی‌های جذب سرمایه‌گذاران را شناسایی کنیم؟">چگونه می‌توانیم بهترین استراتژی‌های جذب سرمایه‌گذاران را شناسایی کنیم؟</option>
							<option value="چه عواملی بر موفقیت کمپین‌های تامین مالی جمعی تأثیرگذارند؟">چه عواملی بر موفقیت کمپین‌های تامین مالی جمعی تأثیرگذارند؟</option>
							<option value="چگونه می‌توانیم تحلیل ریسک را در پروژه‌های تامین مالی جمعی انجام دهیم؟">چگونه می‌توانیم تحلیل ریسک را در پروژه‌های تامین مالی جمعی انجام دهیم؟</option>
							<option value="کدام پلتفرم‌های تامین مالی جمعی بیشترین بازدهی را دارند؟">کدام پلتفرم‌های تامین مالی جمعی بیشترین بازدهی را دارند؟</option>
							<option value="چه نوع محتوایی برای جلب توجه سرمایه‌گذاران مؤثرتر است؟">چه نوع محتوایی برای جلب توجه سرمایه‌گذاران مؤثرتر است؟</option>
							<option value="چگونه می‌توانیم جامعه هدف خود را به درستی شناسایی کنیم؟">چگونه می‌توانیم جامعه هدف خود را به درستی شناسایی کنیم؟</option>
							<option value="میانگین جمع آوری شده حقوقی">میانگین جمع آوری شده حقوقی</option>
							<option value="چگونه می‌توانیم از داده‌های تاریخی برای بهبود کمپین‌های آینده استفاده کنیم؟">چگونه می‌توانیم از داده‌های تاریخی برای بهبود کمپین‌های آینده استفاده کنیم؟</option>
							<option value="چه معیارهایی برای ارزیابی عملکرد کمپین‌های تامین مالی جمعی وجود دارد؟">چه معیارهایی برای ارزیابی عملکرد کمپین‌های تامین مالی جمعی وجود دارد؟</option>
							<option value="چگونه می‌توانیم با چالش‌های قانونی و مقرراتی در تامین مالی جمعی مقابله کنیم؟">چگونه می‌توانیم با چالش‌های قانونی و مقرراتی در تامین مالی جمعی مقابله کنیم؟</option>
						</select>
					</div>
					<ul class="list-unstyled chat-history">
						<li class="chat-message chat-message-right">
							<div class="d-flex overflow-hidden">
								<div class=" flex-grow-1">
									<div class="chat-message-text">
									<pre class="mb-0">به عنوان یک دستیار چطور می‌تونم کمکت کنم؟</pre>
								</div>
								</div>
							</div>
						</li>
						@* <li class="chat-message">
							<div class="d-flex overflow-hidden">
								<div class="chat-message-wrapper flex-grow-1">
									<div class="chat-message-text">
										<p class="mb-0">هی نـوید، یه قالب مدیریت حرفه‌ای می‌خوام یه قالب مدیریت حرفه‌ای می‌خوام یه قالب مدیریت حرفه‌ای می‌خوام یه قالب مدیریت حرفه‌ای می‌خوام یه قالب مدیریت حرفه‌ای می‌خوام یه قالب مدیریت حرفه‌ای می‌خوام یه قالب مدیریت حرفه‌ای می‌خوام.</p>
										<p class="mb-0">میشه یکی بهم معرفی کنی؟ 🤔</p>
									</div>
								</div>
							</div>
						</li> *@
					</ul>
				</div>
				<!-- Chat message form -->
				<div class="chat-history-footer shadow-sm">
					<form class="form-send-message d-flex justify-content-between align-items-center">
						<input class="form-control message-input border-0 me-3 shadow-none"
							   placeholder="پیام خود را اینجا تایپ کنید" id="message-input" />
						<div class="message-actions d-flex align-items-center">
@* 							<i class="speech-to-text ti ti-microphone ti-sm cursor-pointer"></i>
							<label class="form-label mb-0" for="attach-doc">
								<i class="ti ti-photo ti-sm cursor-pointer mx-3"></i>
								<input hidden id="attach-doc" type="file" />
							</label> *@
							<button class="btn btn-primary d-flex send-msg-btn btn-section-block-multiple">
								<span class="align-middle d-md-inline-block d-none">ارسال</span>
								<i class="ti ti-send ms-md-1 ms-0 ic-mirror"></i>
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
		<!-- /Chat History -->
		<div class="app-overlay"></div>
	</div>
</div>
<script>
	function showAlert() {
		var selectElement = document.getElementById("form-repeater-1-3");
		var selectedValue = selectElement.value;
		 var messageInput = document.getElementById("message-input");

		if (selectedValue) {
			messageInput.value = selectedValue; // مقدار انتخاب شده را در فیلد ورودی قرار می‌دهد
		} else {
			messageInput.value = ""; // اگر هیچ گزینه‌ای انتخاب نشده باشد، فیلد ورودی خالی می‌شود
		}
	}
</script>
