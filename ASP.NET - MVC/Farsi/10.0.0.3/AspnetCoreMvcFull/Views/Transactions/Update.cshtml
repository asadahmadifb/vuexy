@model AspnetCoreMvcFull.Models.Transactions

@{
  ViewData["Title"] = "عمل بروزرسانی اطلاعات";
}
@section VendorStyles {
  <link rel="stylesheet" href="~/vendor/libs/select2/select2.css">
  <link rel="stylesheet" href="~/vendor/libs/&#64;form-validation/umd/styles/index.min.css" />
  <link rel="stylesheet" href="~/vendor/libs/flatpickr/flatpickr.css" />
  <link rel="stylesheet" href="~/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.css">
  <link rel="stylesheet" href="~/vendor/libs/datatables-buttons-bs5/buttons.bootstrap5.css">
  <link rel="stylesheet" href="~/vendor/libs/sweetalert2/sweetalert2.css" />
}

@section VendorScripts {
  <script src="~/vendor/libs/moment/moment.js"></script>
  <script src="~/vendor/libs/select2/select2.js"></script>
<script src="~/vendor/libs/select2/i18n/fa.js"></script>
  <script src="~/vendor/libs/&#64;form-validation/umd/bundle/popular.min.js"></script>
  <script src="~/vendor/libs/&#64;form-validation/umd/plugin-bootstrap5/index.min.js"></script>
  <script src="~/vendor/libs/&#64;form-validation/umd/plugin-auto-focus/index.min.js"></script>
  <script src="~/vendor/libs/jdate/jdate.min.js"></script>
<script src="~/vendor/libs/flatpickr/flatpickr-jdate.js"></script>
<script src="~/vendor/libs/flatpickr/l10n/fa.js"></script>
  <script src="~/vendor/libs/sweetalert2/sweetalert2.js"></script>
}

@section PageScripts {
  <script src="~/js/transactions-add-update.js"></script>
  <script src="~/js/transactions-delete.js"></script>
}

<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">عملیات‌های CRUD /</span> بروزرسانی <span>#@Model.Id</span>
</h4>

<!-- Update Transactions Form -->
<div class="card">
  <div class="card-body pb-2">
    <form asp-action="Update" id="UpdateTransactionForm" method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Id" />
      <div class="mb-3">
                <label asp-for="Customer" class="form-label">مشتری</label>
        <input asp-for="Customer" class="form-control" />
        <span asp-validation-for="Customer" class="text-danger"></span>
      </div>
      <div class="mb-3">
                <label asp-for="TransactionDate" class="form-label">اریخ تراکنش</label>
        <input id="TransactionDate" name="TransactionDate" class="form-control transaction-date" value='@Model.TransactionDate.ToString("MMM dd, yyyy")' />
        <span asp-validation-for="TransactionDate" class="text-danger"></span>
      </div>
      <div class="mb-3">
                <label asp-for="DueDate" class="form-label">تاریخ سررسید</label>
        <input id="DueDate" name="DueDate" class="form-control due-date" value='@Model.DueDate.ToString("MMM dd, yyyy")' />
        <span asp-validation-for="DueDate" class="text-danger"></span>
      </div>
      <div class="mb-3">
                <label asp-for="Total" class="form-label">مبلغ کل</label>
        <input asp-for="Total" class="form-control" />
        <span asp-validation-for="Total" class="text-danger"></span>
      </div>
      <div class="mb-3">
                <label asp-for="Status" class="form-label">وضعیت</label>
        <select asp-for="Status" class="form-select select2">
                    <option value="">انتخاب وضعیت</option>
                    <option value="Paid">پرداخت شده</option>
                    <option value="Due">رد شده</option>
                    <option value="Canceled">لغو شده</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <button type="submit" value="ذخیره" class="btn btn-primary me-sm-3 me-1">ذخیره</button>
        <a href="/Transactions/Delete/@Model.Id" class="btn btn-danger me-sm-3 me-1 delete-transaction" data-transaction-username="@Model.Customer" >حذف</a>
        <a asp-controller="Transactions" asp-action="Index" value="Back" class="btn btn-secondary">بازگشت</a>
      </div>
    </form>
  </div>
</div>
